<% layout('layout') %>

<section class="py-5">
  <div class="container text-center">
    <h2 class="text-light mb-4 fw-bold">ðŸ‘¤ My Account</h2>
    <div class="card mx-auto shadow-lg p-4 text-start" style="max-width: 500px;">
      <div class="card-body">
        <h4 class="card-title mb-3 text-primary"><%= user.name %></h4>
        <p class="mb-1"><strong>Email:</strong> <%= user.email %></p>
        <p class="mb-3"><strong>Bio:</strong> <%= user.bio %></p>

        <h6 class="mt-4 text-info">Skills</h6>
        <ul class="list-group list-group-flush">
          <% user.skills.forEach(skill => { %>
            <li class="list-group-item bg-dark text-light border-secondary">
              <%= skill %>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
</section>
