<% layout('layout') %>

<section class="py-5">
  <div class="container">
    <h2 class="text-center forEach text-primary mb-5 fw-bold">Get guidance for the Technical Skills</h2>
    <div class="row g-4">
      <% skills.forEach(skill => { %>
        <div class="col-md-4 col-sm-6">
          <div class="card shadow-sm border-0 h-100 text-center">
            <div class="card-body">
              <h5 class="card-title"><%= skill %></h5>
              <form action="/search" method="GET">
                <input type="hidden" name="q" value="<%= skill %>">
                <button class="btn btn-outline-primary mt-3" type="submit">Search</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>
